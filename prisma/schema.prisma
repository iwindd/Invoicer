// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  application Int
  email     String @unique
  password  String
  firstname String
  lastname  String

  isDeleted  Boolean @default(false)
  permission Int     @default(0)
  owner Boolean @default(false)
  root Boolean @default(true)
  loginToken String @default("")

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Customers Customers[]
  Invoice   Invoice[]
  Activity  Activity[]
}

model Customers {
  id        Int    @id @default(autoincrement())
  application Int
  isApplication Boolean @default(false)
  firstname String
  lastname  String

  email String @unique
  loginId Int @default(0)

  createdBy   User @relation(fields: [createdById], references: [id])
  createdById Int

  isDeleted Boolean @default(false)

  joinedAt DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lineToken String @default("")

  Invoice Invoice[]
}

model Invoice {
  id   Int    @id @default(autoincrement())
  application Int
  code String

  note  String
  items Json

  start DateTime
  end   DateTime

  createdBy   User @relation(fields: [createdById], references: [id])
  createdById Int

  owner   Customers @relation(fields: [ownerId], references: [id])
  ownerId Int

  status   Int
  image    String   @default("")
  uploadAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Activity {
  id        Int      @id @default(autoincrement())
  application Int
  user      User     @relation(fields: [source], references: [id])
  source    Int
  category  String
  type      String
  payload   Json
  createdAt DateTime @default(now())
}

model Payment {
  id        Int     @id @default(autoincrement())
  application Int
  title     String
  name      String
  account   String
  active    Boolean
  isDeleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
